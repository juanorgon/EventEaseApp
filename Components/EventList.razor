@page "/events"

<h2>Upcoming Events</h2>

@if (events?.Any() == true)
{
    foreach (var eventItem in events)
    {
        <EventCard EventName="@eventItem.Name"
                   EventDate="@eventItem.Date"
                   EventLocation="@eventItem.Location" />
    }
}
else
{
    <p>No events available.</p>
}

@code {
    private List<EventModel> events = new()
    {
        new EventModel { Name = "Tech Conference 2025", Date = new DateTime(2025, 6, 20), Location = "Zapopan, Jalisco" },
        new EventModel { Name = "Startup Expo", Date = new DateTime(2025, 7, 10), Location = "Guadalajara, Jalisco" }
    };
}